package com.ifpb30_01_16.projeto_3bimestre.model;

public class IMC {

    private int altura;
    private int peso;
    private int resultado;

    public IMC(){

    }

    public IMC(int altura, int peso, int resultado) {
        this.altura = altura;
        this.peso = peso;
        this.resultado = resultado;
    }

    public int getAltura() {
        return altura;
    }

    public void setAltura(int altura) {
        this.altura = altura;
    }

    public int getPeso() {
        return peso;
    }

    public void setPeso(int peso) {
        this.peso = peso;
    }

    public int getResultado() {
        return resultado;
    }

    public void setResultado(int resultado) {
        this.resultado = resultado;
    }

    @Override
    public String toString() {
        return "IMC{" +
                "altura=" + altura +
                ", peso=" + peso +
                ", resultado=" + resultado +
                '}';
    }
}
